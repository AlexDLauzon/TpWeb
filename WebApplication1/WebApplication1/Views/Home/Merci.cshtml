@model BonAnniversaireToto.Models.Invitation

@{
    Layout = null;
}

<!DOCTYPE>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <title>Merci</title>
    <style>
        body {
            background-color: #f1f1f1;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h1>Merci @Model.Nom !</h1>
        <div class="lead">
            @if (Model.SeraPrésent == true)
            {
                @:C'est cool que vous puissiez venir, il y a du drinks dans le frigo.
            }
            else
            {
                @:Dommage, merci de m'en avertir.
            }
            <p>
                <a href="@Url.Action("AfficherRSVP", "Home")">Voir</a> les frippons qui seront présents.
            </p>
        </div>
    </div>
</body>
</html>

