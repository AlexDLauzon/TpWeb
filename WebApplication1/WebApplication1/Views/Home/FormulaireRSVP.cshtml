@model BonAnniversaireToto.Models.Invitation

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/monStyle.css" rel="stylesheet" />
    <title>FormulaireRSVP</title>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center">
            <h4>RSVP</h4>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Votre nom :</label>
                    @Html.TextBoxFor(i => i.Nom, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Votre courriel :</label>
                    @Html.TextBoxFor(i => i.Courriel, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Votre téléphone :</label>
                    @Html.TextBoxFor(i => i.Téléphone, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Serez-vous présent ?</label>
                    @Html.DropDownListFor(i => i.SeraPrésent,
                        new[]
                        {
                            new SelectListItem()
                            {
                                Text = "J'y serai",
                                Value = bool.TrueString
                            },
                            new SelectListItem()
                            {
                                Text = "Je ne peux pas y aller",
                                Value = bool.FalseString
                            }
                        },
                        "Choisissez une option", new { @class = "form-control" })
                </div>
                <div class="text-center">
                    <input class="btn btn-success" type="submit" value="Go" />
                </div>
            }
        </div>
    </div>
</body>
</html>

